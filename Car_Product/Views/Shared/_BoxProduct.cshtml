@model Product






<div class="col-sm-12 col-md-6  col-xl-4">
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
            <h2 class="d-inline-block mb-2 text-success">@Model.Company</h2>
            <h4 class="text-dark" href="#">@Model.Model</h4>

            <p class="card-text mb-auto">@Model.Color</p>
            <p class="card-text mb-auto">@Model.Number_Plate</p>
            <p class="card-text mb-auto">@Model.Phone_Number</p>
            <p class="card-text mb-auto">@Model.Details</p>


        </div>
        @{
            if (Model.Photo == "no")
            {
                <img class="card-img-right flex-auto d-none d-md-block" data-src="holder.js/200x250?theme=thumb" alt="Thumbnail [200x250]" src="~/img/nophoto.jpg" data-holder-rendered="true" style="width: 200px; height: 250px;">
            }
            else
            {
                <img class="card-img-right flex-auto d-none d-md-block" data-src="holder.js/200x250?theme=thumb" alt="Thumbnail [200x250]" src="~/img/@Model.Photo" data-holder-rendered="true" style="width: 200px; height: 250px;">
            }
        }
        
    </div>
</div>











